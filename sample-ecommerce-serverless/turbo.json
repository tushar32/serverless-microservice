{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "deploy": {
      "dependsOn": ["build", "test"],
      "cache": false,
      "outputs": []
    },
    "deploy:dev": {
      "dependsOn": ["build"],
      "cache": false,
      "outputs": []
    },
    "deploy:staging": {
      "dependsOn": ["build", "test"],
      "cache": false,
      "outputs": []
    },
    "deploy:prod": {
      "dependsOn": ["build", "test", "lint"],
      "cache": false,
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
